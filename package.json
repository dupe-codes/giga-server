{
  "name": "giga-server",
  "version": "1.0.0",
  "description": "a local server exposing useful tools :)",
  "main": "dist/js/server.js",
  "repository": "https://github.com/dupe-codes/giga-server",
  "author": "dupe",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "js-yaml": "^4.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.1",
    "tldraw": "^3.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash.throttle": "^4.1.9",
    "@types/lodash.uniq": "^4.5.9",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^6.0.7"
  },
  "scripts": {
    "build:server": "tsc",
    "build:client": "vite build",
    "build:artifacts": "./scripts/build.sh",
    "build": "yarn build:server && yarn build:client && yarn build:artifacts",
    "dev-client": "vite",
    "format": "./node_modules/prettier/bin/prettier.cjs -w src/*",
    "lint": "./node_modules/eslint/bin/eslint.js src/*",
    "start": "concurrently \"tsc -w\" \"vite build --watch\" \"nodemon --inspect dist/js/server.js\""
  }
}
